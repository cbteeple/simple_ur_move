<?xml version="1.0"?>
<launch>
	<!-- Get arguements  -->
	<arg name="traj" default="False" doc="The trajectory you want to run." />
	<arg name="robot_name" default="" doc="Name of the robot. Leave blank if not specifying" />
    <arg name="controller" default="scaled_pos_joint_traj_controller" doc="Decide between 'scaled_pos_joint_traj_controller', 'scaled_vel_joint_traj_controller, 'pos_joint_traj_controller', 'vel_joint_traj_controller', and 'forward_joint_traj_controller'" />
    <arg name="debug" default="False" doc="Whether debug is on" />


	<!-- start the run node and pass it all of the parameters -->
    <node name="ur_trajectory_node" pkg="simple_ur_move" type="run_joint_trajectory.py" respawn="false"
    	output="screen">
        <param name="traj" type="str" value="$(arg traj)" />
        <param name="controller" type="str" value="$(arg controller)" />
		<param name="robot_name" type="str" value="$(arg robot_name)" />
        <param name="debug" type="bool" value="$(arg debug)"/>
    </node>
</launch>